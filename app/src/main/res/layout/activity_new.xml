<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/mainLehrer"
    android:layout_height="match_parent"
    android:background="@drawable/sun_clouds"
    android:orientation="vertical" >

    <include layout="@layout/toolbar_main"/>

    <!-- Name Label -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:text="Erstelle neu:"
        android:textSize="17sp" />

    <!-- Input Name -->
    <EditText
        android:id="@+id/inputName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:layout_marginBottom="15dip"
        android:hint="Name"
        android:singleLine="true" />

    <TextView
        android:id="@+id/langText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="select a language"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/langSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:entries="@array/lang"
        android:visibility="gone" />


    <!-- Button Create Product -->
    <Button
        android:id="@+id/btnCreateProduct"
        android:background="?attr/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="Create" />

</LinearLayout>